<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".TalentWriteFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"/>
            <TextView
                    android:id="@+id/talentread_title"
                    android:text="제목"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"/>
            <LinearLayout
                    android:weightSum="10"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                            android:src="@drawable/empty"
                            android:id="@+id/talentread_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    <TextView
                            android:textSize="20sp"
                            android:text="활동내용"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_weight="0.2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    <TextView
                            android:background="@drawable/textback"
                            android:textSize="20sp"
                            android:id="@+id/talentread_maintext"
                            android:text="활동내용"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    <LinearLayout
                            android:weightSum="4.5"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="20sp"
                                android:id="@+id/talentread_category"
                                android:text="카테고리 : "
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"/>
                        <TextView
                                android:layout_weight="0.2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:textSize="20sp"
                                android:id="@+id/talentread_people"
                                android:text="인원 : "
                                android:layout_weight="1.8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    <TextView
                            android:textSize="20sp"
                            android:text="교육 장소 : "
                            android:id="@+id/talentread_searchloc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    <fragment
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:map="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/talentread_map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="350sp"
                            tools:context="com.example.abcd.googlemap.MapsActivity"/>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>
                    <TextView
                            android:textSize="20sp"
                            android:id="@+id/talentread_duedate"
                            android:text="신청 마감일자 : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="3.5"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                        <Button
                                android:textSize="20sp"
                                android:text="신청"
                                android:textColor="@color/White"
                                android:backgroundTint="@color/BoldGray"
                                android:id="@+id/talentread_save"
                                android:layout_width="wrap_content"
                                android:layout_height="60sp"/>
                        <TextView
                                android:layout_width="60sp"
                                android:layout_height="match_parent"/>
                        <Button
                                android:textSize="20sp"
                                android:text="취소"
                                android:textColor="@color/White"
                                android:backgroundTint="@color/BoldGray"
                                android:id="@+id/talentread_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="60sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>