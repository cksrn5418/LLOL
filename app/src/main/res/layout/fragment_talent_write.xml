<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".TalentWriteFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
        <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"/>
                    <TextView
                            android:text="아래 내용을 입력해주세요"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/headline"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="50sp"/>
                    <LinearLayout
                            android:weightSum="10"
                            android:layout_weight="10"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                        <TextView
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_weight="9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <EditText
                                    android:id="@+id/talentwrite_title"
                                    android:hint="제목"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>
                            <EditText
                                    android:id="@+id/talentwrite_maintext"
                                    android:hint="활동내용"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                <Spinner
                                        android:spinnerMode="dialog"
                                        android:id="@+id/talentwrite_category"
                                        android:prompt="@string/prompt1"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"/>
                                <Spinner
                                        android:spinnerMode="dialog"
                                        android:id="@+id/talentwrite_people"
                                        android:prompt="@string/prompt2"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"/>
                            </LinearLayout>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>
                            <EditText
                                    android:id="@+id/talentwrite_cost"
                                    android:hint="가격(원) 입력"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"/>
                            <LinearLayout
                                    android:weightSum="6"
                                    android:orientation="horizontal"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                <EditText
                                        android:hint="재능기부 주소 검색"
                                        android:id="@+id/talentwrite_searchloc"
                                        android:layout_weight="5"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"/>
                                <Button
                                        android:id="@+id/talentwrite_searchbtn"
                                        android:textColor="@color/White"
                                        android:text="검 색"
                                        android:backgroundTint="@color/BoldGray"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"/>
                            </LinearLayout>
                            <fragment
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:map="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_weight="9.5"
                                    android:id="@+id/talentwrite_map"
                                    android:name="com.google.android.gms.maps.SupportMapFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    tools:context="com.example.abcd.googlemap.MapsActivity"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:id="@+id/talentwrite_maploc"
                                    android:text="주소 : "
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <Button
                                    android:textSize="20sp"
                                    android:id="@+id/talentwrite_datebtn"
                                    android:text="시작날짜(년, 월, 일)"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <EditText
                                    android:id="@+id/talentwrite_datedetail"
                                    android:hint="세부일자(요일 및 기간) 입력"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <EditText
                                    android:id="@+id/talentwrite_openchat"
                                    android:hint="오픈채팅방 링크 입력(선택)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <Button
                                    android:textSize="20sp"
                                    android:id="@+id/talentwrite_imguploadbtn"
                                    android:text="이미지 업로드"
                                    android:layout_weight="2.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"/>
                            <ImageView
                                    android:src="@drawable/empty"
                                    android:id="@+id/talentwrite_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_weight="2.5"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                <Button
                                        android:text="저장"
                                        android:textColor="@color/White"
                                        android:backgroundTint="@color/BoldGray"
                                        android:id="@+id/talentwrite_save"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"/>
                                <TextView
                                        android:layout_width="60sp"
                                        android:layout_height="match_parent"/>
                                <Button
                                        android:text="취소"
                                        android:textColor="@color/White"
                                        android:backgroundTint="@color/BoldGray"
                                        android:id="@+id/talentwrite_cancel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>