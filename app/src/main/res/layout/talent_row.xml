<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:weightSum="20"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
            android:layout_weight="14"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5sp"
                android:text="   "/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="   "/>
            <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/row_profileimg"
                    android:src="@drawable/emptyprofile"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="   "/>
            <TextView
                    android:id="@+id/row_profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:text="이찬구"
                    android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="   "/>
            <TextView
                    android:fontFamily="@font/headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row_title"
                    android:textSize="30sp"
                    android:gravity="left"
                    android:text="재능기부"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5sp"
                android:text=""/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="   "/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="인원 : "/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row_amount"
                    android:textSize="25sp"
                    android:text="3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="명"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5sp"
                android:text="   "/>
    </LinearLayout>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.2"/>
    <ImageView
            android:src="@drawable/empty"
            android:id="@+id/row_image"
            android:layout_weight="5.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.2"/>
</LinearLayout>